<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <edu.skku.stickerview.StickerView
        android:id="@+id/stickerView"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toTopOf="@id/suggestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </edu.skku.stickerview.StickerView>

    <Button
        android:id="@+id/suggestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:text="suggest"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/imageViewLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stickerView">

    </Button>

    <LinearLayout
        android:id="@+id/imageViewLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/suggestButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/neighborImageView1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp">
        </ImageView>

        <ImageView
            android:id="@+id/neighborImageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp">
        </ImageView>

        <ImageView
            android:id="@+id/neighborImageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp">
        </ImageView>

        <ImageView
            android:id="@+id/neighborImageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp">
        </ImageView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>